<%= form_for @user do |f| %>
    <div class="error-messages">
        <p>Please correct the following errors:</p>
        <ul></ul>
    </div>
    <%= field_set_tag do %>
        <%= f.label :name, class: 'icon' do fa_icon 'user' end %>
        <%= f.text_field :name, :required => true, placeholder: 'Full Name' %>
        <span id="name_errors" class="error-message">Invalid name.</span>
    <% end %>

    <%= field_set_tag do %>
        <%= f.label :email, class: 'icon' do fa_icon 'envelope-o' end %>
        <%= f.email_field :email, :required => true, placeholder: 'Email' %>
        <span id="email_errors" class="error-message">Invalid email.</span>
    <% end %>

    <%= field_set_tag do %>
        <%= f.label :password, class: 'icon' do fa_icon 'key' end %>
        <%= f.password_field :password, :required => true, placeholder: 'Password' %>
        <span id="password_errors" class="error-message">Invalid Passowrd. (Must contain at least 8 characters containaing at least 1 lowercase and 1 uppercase).</span>
    <% end %>

    <%= field_set_tag do %>
        <%= f.label :password_confirmation, class: 'icon' do fa_icon 'key' end %>
        <%= f.password_field :password_confirmation, :required => true, placeholder: 'Confirm Password' %>
        <span id="confirm_password_errors" class="error-message">Passwords don't match.</span>
    <% end %>

    <%= field_set_tag do %>
        <%= f.label :city, class: 'icon' do fa_icon 'home' end %>
        <%= f.text_field :city, placeholder: 'Current City' %>
    <% end %>

    <%= field_set_tag 'Gender' do %>
        <%= f.label :gender, class: 'icon dropdown-icon' do fa_icon 'caret-down' end %>
        <%= f.select :gender do %>
            <% options = [[],
                          ['Male', 'male'],
                          ['Female', 'female'],
                          ['Other', 'other']
            ] %>
            <% options.each do |c| -%>
                <%= content_tag :option, c.first, value: c.last %>
            <% end %>
        <% end %>
    <% end %>

    <%= field_set_tag 'Birthdate', class: 'date' do %>
        <%= f.label :dob, class: 'icon dropdown-icon' do fa_icon 'caret-down' end %>
        <%= f.label :dob, class: 'icon dropdown-icon' do fa_icon 'caret-down' end %>
        <%= f.label :dob, class: 'icon dropdown-icon' do fa_icon 'caret-down' end %>
        <%= f.date_select :dob, :start_year => 1900, :end_year => 2015, include_blank: true %>
    <% end %>

    <%= field_set_tag do %>
        <%= f.text_area :bio, :rows => 6, placeholder: 'Bio' %>
    <% end %>

    <%= field_set_tag do %>
        <%= f.submit "Register", id: 'user_submit', class: "btn btn-primary" %>
    <% end %>
<% end %>
